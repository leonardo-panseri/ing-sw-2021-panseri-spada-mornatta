         fx:controller="it.polimi.ingsw.view.implementation.gui.widget.PlayerBoardWidget">
    <AnchorPane styleClass="player-board" prefHeight="720.0" prefWidth="1080.0">
        <VBox prefWidth="1000.0" prefHeight="720.0" alignment="CENTER">
            <AnchorPane.leftAnchor>10</AnchorPane.leftAnchor>
            <HBox fx:id="faithTrackDisplay" alignment="CENTER" prefWidth="1000.0"/>
            <Pane fx:id="playerBoardDisplay" prefWidth="1000.0" prefHeight="507">
                <VBox.margin>
                    <Insets top="30"/>
                </VBox.margin>
                <Pane fx:id="depositDisplay" layoutX="20.0" layoutY="36.5"/>
                <Pane fx:id="baseProductionDisplay" layoutX="182.0" layoutY="250.0"/>
            </Pane>
        </VBox>
        <Button onAction="#goToMarket">View Market</Button>
        <Pane fx:id="leadersDisplay">
            <AnchorPane.leftAnchor>1005</AnchorPane.leftAnchor>
        </Pane>
        <Pane fx:id="chatDisplay">
            <AnchorPane.rightAnchor>0</AnchorPane.rightAnchor>
            <AnchorPane.bottomAnchor>0</AnchorPane.bottomAnchor>
        </Pane>
    </AnchorPane>
