<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<FlowPane prefHeight="720.0" prefWidth="1080.0" stylesheets="@css/style.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.view.implementation.gui.controller.Home">
   <HBox prefHeight="720">
       <VBox alignment="CENTER" styleClass="font-20">
           <Label>Enter the server ip and port:</Label>
           <TextField fx:id="serverIp" maxWidth="200.0">
               <VBox.margin>
                   <Insets bottom="10.0" />
               </VBox.margin></TextField>
           <Button fx:id="connect">Connect</Button>
           <Label fx:id="errorDisplay" styleClass="error-display" visible="false" />
           <HBox.margin>
               <Insets left="20.0" right="20.0"/>
           </HBox.margin>
           <Button styleClass="music-button" onAction="#toggleMusic"/>
       </VBox>
       <VBox alignment="TOP_CENTER" prefHeight="720.0" prefWidth="1068.0" HBox.hgrow="ALWAYS" styleClass="home-bg">
           <Label styleClass="title" text="Masters Of Renaissance" />
       </VBox>
   </HBox>
</FlowPane>
